<% include ../../partials/layout.ejs %>
<div class="container">
    <h1 class="text-center pacifico"> Panel de administración </h1>
    <hr class="cust-hr">
    <div class="row">
      <% if(services.length > 0){ %>
        <% services.forEach(function(service){ %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card">
              <img class="img-fluid"" src="<%= service.imageUrl %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= service.title %> </h5>
                <p class="card-text"><%= service.description %>.</p>
                <p class="card-text"><%= service.price %>.</p>
                <!--delete button-->
                <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal<%= service._id %>"><i class="fas fa-check"></i>Comenzar</button>

                <div class="modal fade" id="myModal<%= service._id %>" tabindex="-1" role="dialog" arialabelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h4 class="modal-title" id="myModalLabel">Servicio:<%= service.title %></h4>
                          <button type="button" class="close" data-dismiss="modal" arial-label="Close">
                            <span aria-hidden="true"> &times;</span>
                          </button>
                        </div>
                        <div class="modal-body"><p class="modal-title" id="myModalLabel"> Está seguro de que quire comenzar el servicio?</h4></div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                          <form action="/app/register" class="link" method="POST">
                            <input type="hidden" name="serv" value="<%= service._id %>">
                            <button type="submit" class="btn btn-primary"> Confirmar</button>
                          </form>
                        </div>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else{ %>
        <td colspan="6" class="text-center"> No hay servicios para mostrar</td>
      <% } %>
    </div>
</div>
