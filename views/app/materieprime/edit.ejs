<% include ../../partials/layout.ejs %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 mx-auto">

    	<h1><i class="fas fa-sign-in-alt"></i>Editar Materia Prima</h1>

    	<% if(messages.length > 0) { %>
    		<div class="alert alert-danger">
    			<% messages.forEach(function(message) { %>
    				<p><%= message %></p>
    			<% }); %>
    		</div>
    	<% } %>

    	<!-- Edit FORM -->
    	<form action="/app/materieprime/<%= materieprime._id %>?_method=PUT" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label>Nombre</label>
          <input type="text" class="form-control" name="nombre" value="<%= materieprime.nombre %>">
        </div>
        <div class="form-group">
          <label>Presentacion</label>
          <input type="number" class="form-control" name="presentacion" value="<%= materieprime.presentacion %>">
        </div>
        <button type="submit" class="btn btn-success btn-lg">Guardar</button>
    	</form>

    	<hr>

    </div>
  </div>
</div>
