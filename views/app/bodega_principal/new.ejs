<% include ../../partials/layout.ejs %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 mx-auto">

    	<h1><i class="fas fa-sign-in-alt"></i>Nueva Entrada</h1>

    	<% if(messages.length > 0) { %>
    		<div class="alert alert-danger">
    			<% messages.forEach(function(message) { %>
    				<p><%= message %></p>
    			<% }); %>
    		</div>
    	<% } %>

    	<!-- LOGIN FORM -->
    	<form action="/app/bodega_principal" method="post">
        <div class="form-group">
          <label>Nombre</label>
          <select name="mpid">
            <% materieprime.forEach(function(mp){ %>
              <option value="<%= mp._id %>" class="form-control"><%= mp.nombre %>
            <% }); %>
          </select>
        </div>
        <div class="form-group">
          <label>Cantidad</label>
          <input type="number" class="form-control" name="cantidad">
        </div>
        <div class="form-group">
          <label>Precio</label>
          <input type="number" class="form-control" name="precio">
        </div>
        <button type="submit" class="btn btn-success btn-lg">Guardar </button>
    	</form>

    	<hr>
    </div>
  </div>
</div>
