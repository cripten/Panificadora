<% include ../partials/layout.ejs %>
<div class="container">

	<div class="pb-2 mt-4 mb-2 border-bottom text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/user/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">
		<div class="mx-auto col-md-3 col-sm-12">
    	<img src="http://placehold.it/380x500" alt="" class="img-fluid img-thumbnail" style= "width:100%;height:70%;" />
    </div>
		<!-- LOCAL INFORMATION -->
		<div class="col-md-9 col-sm-12">
			<div class="card card-block bg-faded" style= "padding:10px;">
				<h3><span class="fa fa-user"></span> Local</h3>

				<% if (user.email) { %>
					<p>
						<strong>id</strong>: <%= user._id %><br>
						<strong>nombre</strong>: <%= user.nombre %><br>
						<strong>apellido</strong>: <%= user.apellido %><br>
						<strong>email</strong>: <%= user.email %><br>
						<strong>password</strong>: <%= user.tipo %>
					</p>
					<!--Edit button-->
					<form action="/app/staff/<%= user._id %>/edit" method="GET" class="link">
						<button type="submit" class="btn btn-warning btn-sm right-space"><i class="fas fa-pencil-alt"></i></button><!--edit button-->
					</form>
				<% } %>

			</div>
		</div>

</div>
